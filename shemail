#!/bin/bash
#Desc: Fetch auth code tool
VERSION="v0.0.3"

DIR_PATH=$(dirname $(readlink -f "${BASH_SOURCE:-$0}"))

# Decrypts passwords quietly
# see: https://wiki.archlinux.org/index.php/Mutt#Passwords_management
. <(gpg -qd "$DIR_PATH/.creds.gpg")

# Username and password for your Gmail/G Suite account
username=$my_user
# Password assigned from decrypted file
password=$my_pass
# String that preceds code in the email subject
prefix="AuthCode:"

fetch_mails () {
  # No of recent unread mails to be fetch
  COUNT=$@
  # Parse mails from gmail feed in reverse order
  mails=$(curl  -u $username:$password --silent "https://mail.google.com/mail/feed/atom"\
    |tr -d '\n' | sed 's:</entry>:\n:g'\
    |head -n $COUNT\
    |sed -n \
    's/.*<title>\(.*\)<\/title.*<issued>\([^<]*\).*<author><name>\([^<]*\)<\/name><email>\([^<]*\).*/[\2] \3 (\4): \1/p' \
    |tac)
  if [[ -z $mails ]]; then echo "Couldn't retrieve mails à«®â—ž ï»Œ â—Ÿáƒ"; exit 1; fi
  # Read line by line and operate
  while IFS= read -r line; do
    # Search for pattern and extract code
    if [[ $line =~ .*:\ $prefix ]]; then
      # Mails fetch with UTC time, extract it and convert to locale
      date=$(date --date=$(echo $line | sed 's/\[\(.*T.*Z\)\].*/\1/g') "+%x %X")
      auth=$(echo $line | sed "s/.*$prefix \(.*\)$/\1/g")
      # echo $auth
    fi
  done <<< "$mails"
}

echo à«® á´–ï»Œá´–áƒ SÏ…ÏÑ”Ñ Ã‡0âˆ‚3 R3Ñ‚ÑiÑ”Î½Ñ”Ñ à«®â€“ï»Œâ€“ áƒ
echo ê’·ê’¦ê’·ê’¦ê’·ê’¦ê’·ê’¦ê’·ê’¦ê’·ê’¦ê’·ê’¦ê’·ê’¦ê’·
echo $VERSION
echo
fetch_mails 10
code=$auth
if [[ -n $code ]]; then
  echo "Your last code (on $date) was: $code à­­Ì¥â‹†*ï½¡"
else
  echo No recent codes à«®â—ž ï»Œ â—Ÿáƒ
fi
echo "(Run what you need to run in order to get a new code.)"
printf " ðŸ¾  Checking mails (CRTL+C to quit)  "
new_code=$auth
while [ $code == $new_code ]; do
  printf 'ðŸŒ•ï¸Ž'
  for frame in 'ðŸŒ•ï¸Ž' 'ðŸŒ”ï¸Ž' 'ðŸŒ“ï¸Ž' 'ðŸŒ’ï¸Ž' 'ðŸŒ‘ï¸Ž' 'ðŸŒ˜ï¸Ž' 'ðŸŒ—ï¸Ž' 'ðŸŒ–ï¸Ž' 'ðŸŒ•ï¸Ž'; do
    echo -en "\b$frame"
    sleep 0.1
  done
  fetch_mails 5
  new_code=$auth
  # echo $auth 
  # sleep 0.1
done
echo
echo "à«® âš†ï»Œâš†áƒ New code found ($date): $new_code"
echo "Have fun! à«® Ë™â°™Ë™ áƒ rawr!"
$DIR_PATH/alertdone "à«® âš†ï»Œâš†áƒ New code found ($date): $new_code"
#sleep 2
#espeak $new_code
